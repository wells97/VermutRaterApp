<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🎨 Colors -->
    <Color x:Key="VermouthGold">#E6C17A</Color>
    <Color x:Key="VermouthRedWine">#912F29</Color>
    <Color x:Key="VermouthBlack">#0D0D0D</Color>

    <!-- ✨ Estils -->
    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="CinzelDecorative-Regular" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource VermouthGold}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="BodyLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="EBGaramond-Regular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource VermouthGold}" />
    </Style>

    <Style x:Key="FormEntryFrameStyle" TargetType="Frame">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderColor" Value="{StaticResource VermouthGold}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style x:Key="FormEntryStyle" TargetType="Entry">
        <Setter Property="FontFamily" Value="EBGaramond-Regular" />
        <Setter Property="TextColor" Value="{StaticResource VermouthGold}" />
        <Setter Property="BackgroundColor" Value="#1A1A1A" />
        <Setter Property="PlaceholderColor" Value="#888" />
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="EBGaramond-Regular" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="{StaticResource VermouthRedWine}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="45" />
    </Style>

    <Style x:Key="OutlinedButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="EBGaramond-Regular" />
        <Setter Property="TextColor" Value="{StaticResource VermouthGold}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="{StaticResource VermouthGold}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

</ResourceDictionary>
