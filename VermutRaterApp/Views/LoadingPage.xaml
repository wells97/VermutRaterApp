<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VermutRaterApp.Views.LoadingPage"
             BackgroundColor="#fffaf2"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Padding="40" Spacing="30" VerticalOptions="Center">
        <Image Source="splash.png" HeightRequest="150" />
        <Label Text="{Binding TextoCarga}" FontSize="18" TextColor="#800000" HorizontalOptions="Center" />
        <ActivityIndicator IsRunning="True" Color="#a0522d" HeightRequest="40" />
    </VerticalStackLayout>

</ContentPage>
