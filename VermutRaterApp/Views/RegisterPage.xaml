<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VermutRaterApp.Views.RegisterPage"
             BackgroundColor="#3E1F0F"
             Title="Registrar-se">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="Crear compte"
                   FontFamily="serif"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="#E6C17A" />

            <Label Text="Email" FontSize="16" TextColor="#E6C17A" />
            <Entry x:Name="EmailEntry"
                   Placeholder="Introdueix el teu email"
                   BackgroundColor="#F7F3E3"
                   TextColor="Black"
                   Keyboard="Email" />

            <Label Text="Contrasenya" FontSize="16" TextColor="#E6C17A" />
            <Entry x:Name="PasswordEntry"
                   Placeholder="••••••••"
                   IsPassword="True"
                   BackgroundColor="#F7F3E3"
                   TextColor="Black" />

            <Label Text="* Només pots registrar-te a prop de la vermuteria."
                   FontSize="12"
                   TextColor="#E6C17A"
                   HorizontalOptions="Center" />

            <Button x:Name="RegisterButton"
                    Text="Registrar"
                    BackgroundColor="#A42A24"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    IsVisible="True"
                    Clicked="OnRegisterClicked" />

            <ActivityIndicator x:Name="LoadingSpinner"
                               IsRunning="False"
                               IsVisible="False"
                               Color="#E6C17A"
                               HeightRequest="40"
                               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
