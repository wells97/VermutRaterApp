<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:VermutRaterApp.Views"
    x:Class="VermutRaterApp.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <ShellContent
        Title="Main"
        Route="MainPage"
        ContentTemplate="{DataTemplate views:MainPage}" />

    <ShellContent
        Title="Detalles"
        Route="DetallesPage"
        ContentTemplate="{DataTemplate views:DetallesPage}" />

</Shell>
