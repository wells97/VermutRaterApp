<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VermutRaterApp.App"
             xmlns:conv="clr-namespace:VermutRaterApp.Converters"
             >
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="VermutCardShadow" TargetType="Frame">
                <Setter Property="Shadow">
                    <Shadow Brush="Black" Offset="3,3" Radius="6" Opacity="0.2" />
                </Setter>
            </Style>
            <conv:PuntuacioVisibleConverter x:Key="PuntuacioVisibleConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
